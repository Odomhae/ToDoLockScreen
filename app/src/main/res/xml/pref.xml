<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <SwitchPreference
        android:defaultValue="false"
        android:summaryOff="앱 비활성화됨"
        android:summaryOn="앱 활성화됨"
        android:key="useLockScreen"
        android:title="앱 사용" />

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/colorCategory"
        android:entryValues="@array/colorCategory"
        android:key="textColorCategory"
        android:title="글자색" />

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/colorCategory"
        android:entryValues="@array/colorCategory"
        android:key="listColorCategory"
        android:title="리스트 색" />

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/colorCategory"
        android:entryValues="@array/colorCategory"
        android:key="backgroundColorCategory"
        android:title="배경색" />


</PreferenceScreen>